{
  "name": "header",
  "version": "1.0.0",
  "description": "Frontend practice with header",
  "scripts": {
    "serve": "live-server ./src --port=51721 --quiet",
    "format": "prettier --ignore-path .prettierignore --write './src/**/*.{html,css,scss}'",
    "lint": "npm run format && mate-scripts lint",
    "test:only": "backstop test",
    "test": "npm run lint && npm run test:only",
    "build": "mate-scripts build",
    "deploy": "mate-scripts deploy",
    "update": "mate-scripts update",
    "postinstall": "npm run update"
  },
  "devDependencies": {
    "@linthtml/linthtml": "^0.9.6",
    "@mate-academy/backstop-config": "latest",
    "@mate-academy/bemlint": "latest",
    "@mate-academy/linthtml-config": "latest",
    "@mate-academy/scripts": "^1.8.6",
    "@mate-academy/stylelint-config": "latest",
    "backstopjs": "6.3.23",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "parcel": "^2.12.0",
    "prettier": "^3.3.2",
    "stylelint": "^16.7.0",
    "stylelint-scss": "^6.4.1"
  },
  "mateAcademy": {
    "projectType": "layout",
    "linters": {
      "javascript": false,
      "bem": false
    }
  }
}

